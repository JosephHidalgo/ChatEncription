# Configuración de la Aplicación
APP_NAME="Sistema de Chat Seguro"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base de Datos PostgreSQL
DATABASE_URL=postgresql+asyncpg://usuario:password@localhost:5432/chat_seguro
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1

# Configuración de Cifrado
RSA_KEY_SIZE=2048
AES_KEY_SIZE=256
KEY_ROTATION_DAYS=90
SESSION_KEY_ROTATION_HOURS=24

# Rate Limiting
RATE_LIMIT_LOGIN=5/15minute
RATE_LIMIT_MESSAGES=100/1minute
RATE_LIMIT_WEBSOCKET=3/1minute

# Contraseñas
PASSWORD_MIN_LENGTH=12
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Auditoría
ENABLE_AUDIT_LOGS=True
LOG_LEVEL=INFO
